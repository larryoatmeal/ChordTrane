# Ubuntu upstart file at /etc/init/chordtrane.conf

limit nofile 32768 32768

description "chordtrane-web"

start on (local-filesystems and net-device-up IFACE=eth0)
stop on [!12345]

script
  # Source /etc/default
  . /etc/default/chordtrane

  # Launch chordtrane if enabled in /etc/default
  if [ "x$ENABLE_CHORDTRANE_WEB" = "xyes" ]; then
    export HOME=$CHORDTRANE_HOME
    export JAVA_TOOL_OPTIONS='-Dfile.encoding=UTF8'
    export JAVA_OPTS=$JAVA_OPTS
    exec start-stop-daemon --start --pidfile /var/run/chordtrane.pid --make-pidfile --chuid ${CHORDTRANE_USER}:${CHORDTRANE_GROUP} --chdir ${CHORDTRANE_HOME} --exec ${CHORDTRANE_HOME}/modules/web/target/start
  fi
end script

pre-start script
  # Source /etc/default
  . /etc/default/chordtrane
  if [ -f "$CHORDTRANE_HOME/modules/web/RUNNING_PID" ]; then
    rm -rf $CHORDTRANE_HOME/modules/web/RUNNING_PID
  fi
end script